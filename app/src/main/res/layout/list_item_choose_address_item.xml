<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingTop="10dip"
    android:paddingBottom="10dip"
    android:background="@drawable/nomal_list_item_bg"
    android:orientation="vertical" >
    
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal">
	    <TextView 
	        android:id="@+id/address_item_name"
	        android:layout_width="0dip"
	        android:layout_weight="2"
	        android:layout_marginLeft="12dip"
	        android:layout_height="wrap_content"
	        android:singleLine="true"
	    	android:ellipsize="end"
	        android:textColor="@color/color_app_base_25"
	        android:textSize="@dimen/dimen_global_16sp"/>
	    <TextView 
	        android:id="@+id/address_item_phone"
	        android:layout_width="0dip"
	        android:layout_marginLeft="12dip"
	        android:layout_weight="3"	 
	        android:singleLine="true"
	    	android:ellipsize="end"       
	        android:textColor="@color/color_app_base_25"
	        android:textSize="@dimen/dimen_global_16sp"
	        android:layout_height="wrap_content"/>
	</LinearLayout>
	<TextView 
	    android:id="@+id/address_item_detail"
	    android:layout_height="wrap_content"
	    android:layout_width="wrap_content"
	    android:singleLine="true"
	    android:ellipsize="end"
	    android:layout_marginLeft="12dip"
	    android:layout_marginTop="8dip"
	    android:textSize="@dimen/dimen_global_14sp"
	    android:textColor="@color/color_app_base_26"/>
</LinearLayout>
