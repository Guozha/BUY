<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_app_base_6"
    android:orientation="vertical" >
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="64dip"
	    android:gravity="center_vertical"
	    android:paddingLeft="18dip"
	    android:paddingRight="18dip"
	    android:layout_marginTop="5dip"
	    android:background="@color/color_app_base_5">
	    
	    <TextView 
	        android:id="@+id/order_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="@dimen/dimen_global_14sp"
	        android:textColor="@color/color_app_base_26"/>
	    
	    <TextView 
	        android:id="@+id/order_phone"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="@dimen/dimen_global_14sp"
	        android:singleLine="true"
	        android:ellipsize="end"
	        android:layout_marginLeft="60dip"
	        android:layout_toRightOf="@id/order_name"
	        android:textColor="@color/color_app_base_26"/>
	    
	    <TextView 
	        android:id="@+id/order_address"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/order_name"
	        android:layout_marginTop="5dip"
	        android:textSize="@dimen/dimen_global_14sp"
	        android:singleLine="true"
	        android:ellipsize="end"
	        android:textColor="@color/color_app_base_26"/>
	</RelativeLayout>
	<View
	    android:layout_width="match_parent"
	    android:layout_height="1px"
	    android:background="@color/color_app_base_27"/>
	<Space 
	    android:layout_width="match_parent"
	    android:layout_height="5dip"/>
	<View
	    android:layout_width="match_parent"
	    android:layout_height="1px"
	    android:background="@color/color_app_base_27"/>
   <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical">
	    <TextView 
	        android:layout_width="match_parent"
	        android:layout_height="48dip"
	        android:text="请选择配送时间"
	        android:paddingLeft="18dip"
	        android:gravity="center_vertical"
	        android:layout_marginBottom="1dip"
	        android:background="@color/color_app_base_5"
	        android:textColor="@color/color_app_base_4"
	        android:textSize="@dimen/dimen_global_14sp"/>
	    
	    <FrameLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content">
	    	<com.guozha.buy.view.scroll.WheelView
	            android:id="@+id/select_time_wheelview"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_horizontal"
	            android:background="@color/color_app_base_5"
	            android:visibility="gone"
	            android:layout_marginTop="1dp" />
	    	<ImageView
	    	    android:layout_width="match_parent"
	    	    android:layout_height="match_parent"
	    	    android:scaleType="fitXY"
	    	    android:src="@drawable/under_order_mask"/>
		</FrameLayout>
		
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="1dp"
	        android:background="@color/color_app_base_5"
	        android:orientation="vertical">
	     
	    <LinearLayout 
	        android:id="@+id/quick_time_choose"
	        android:layout_width="match_parent"
	        android:layout_height="40dip"
	        android:gravity="center_horizontal"
	        android:background="@drawable/white_list_selector_bg"
	        android:orientation="horizontal">
	        <ImageView 
	            android:id="@+id/quick_time_choose_icon"
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:scaleType="centerInside"
	            android:src="@drawable/truck_unselected"/>
	         <TextView 
	            android:id="@+id/quick_time_choose_text"
	            android:layout_marginLeft="30dip"
	    	    android:layout_width="wrap_content"
	    	    android:layout_height="40dip"
	    	    android:text="1小时速达"
	    	    android:textColor="@color/color_app_base_4"
	    	    android:textSize="@dimen/dimen_global_14sp"
	    	    android:gravity="center"/>
	    </LinearLayout>
	       
	        <View 
	            android:layout_width="match_parent"
	            android:layout_height="1dp"
	            android:background="@color/color_app_base_27"/>
	        <EditText 
	            android:id="@+id/leave_message"
	            android:layout_width="match_parent"
	            android:layout_height="32dip"
	            android:hint="给小菜留言"
	            android:gravity="center_vertical"
	            android:paddingLeft="8dip"
	            android:paddingRight="8dip"
	            android:layout_marginTop="8dip"
	            android:layout_marginBottom="8dip"
	            android:layout_marginLeft="16dip"
	            android:layout_marginRight="16dip"
	            android:textSize="@dimen/dimen_global_14sp"
	            android:textColor="@color/color_app_base_4"
	            android:textColorHint="@color/color_app_base_8"
	            android:background="@drawable/gray_edit_bg"/>
	    </LinearLayout>
	</LinearLayout>
   <View 
       android:layout_width="match_parent"
       android:layout_height="1px"
       android:background="@color/color_app_base_27"/>	
</LinearLayout>
   <LinearLayout 
       android:layout_width="match_parent"
       android:layout_height="50dip"
       android:layout_gravity="bottom"
       android:background="@color/color_app_base_24"
       android:orientation="vertical">
   	   <View 
       android:layout_width="match_parent"
       android:layout_height="1px"
       android:background="@color/color_app_base_27"/>
       <Button 
       android:id="@+id/plance_order_button"
       android:layout_height="match_parent"
       android:layout_width="match_parent"
       android:layout_marginTop="8dip"
       android:layout_marginBottom="8dip"
       android:layout_marginLeft="12dip"
       android:layout_marginRight="12dip"
       android:background="@drawable/nomal_button_nomal_bg"
       android:text="去支付"
       android:textSize="@dimen/dimen_global_14sp"
       android:textColor="@color/color_app_base_5"/>
   </LinearLayout>
</FrameLayout>

