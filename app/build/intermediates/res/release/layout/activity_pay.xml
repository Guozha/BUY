<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_app_base_6"
    android:orientation="vertical" >
    
    <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1">
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical">
    <!-- 商品金额 -->
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="43dip"
        android:background="@color/color_app_base_5"
        android:layout_marginTop="1dip"
        android:orientation="horizontal">
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_global_14sp"
            android:textColor="@color/color_app_base_4"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="18dip"
            android:text="商品金额"/>
        
        <TextView 
            android:id="@+id/pay_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_global_14sp"
            android:textColor="@color/color_app_base_9"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="18dip"/>
    </RelativeLayout>
    <!-- 服务费 -->
    <RelativeLayout 
        android:id="@+id/pay_server_fee_rule"
        android:layout_width="match_parent"
        android:layout_height="43dip"
        android:background="@color/color_app_base_5"
        android:layout_marginTop="1dip"
        android:orientation="horizontal">
        
        <TextView 
            android:id="@+id/server_pice_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_global_14sp"
            android:textColor="@color/color_app_base_4"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="18dip"
            android:text="服务费"/>
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/note_icon"
            android:layout_toRightOf="@id/server_pice_title"/>
        <TextView 
            android:id="@+id/pay_server_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_global_14sp"
            android:textColor="@color/color_app_base_9"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="18dip"/>
    </RelativeLayout>
    
    <!-- 账户余额 -->
    <RelativeLayout 
        android:id="@+id/pay_can_use_money"
        android:layout_width="match_parent"
        android:layout_height="43dip"
        android:background="@drawable/white_list_selector_bg"
        android:layout_marginTop="1dip"
        android:orientation="horizontal">
        
        <TextView 
            android:id="@+id/pay_can_use_money_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_global_14sp"
            android:textColor="@color/color_app_base_4"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="18dip"/>
        
        <TextView 
            android:id="@+id/pay_can_use_money_deduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_global_14sp"
            android:textColor="@color/color_app_base_1"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/pay_can_use_money_text"/>
        <ImageView 
            android:id="@+id/pay_can_use_money_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/pay_selectbox_normal"
            android:layout_marginRight="18dip"/>
    </RelativeLayout>
    
    <!-- 菜豆 -->
    <!--  
    <RelativeLayout 
        android:id="@+id/pay_can_use_bean"
        android:layout_width="match_parent"
        android:layout_height="43dip"
        android:background="@drawable/white_list_selector_bg"
        android:layout_marginTop="1dip"
        android:orientation="horizontal">
        
        <TextView 
            android:id="@+id/pay_can_user_bean_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_global_14sp"
            android:textColor="@color/color_app_base_4"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="18dip"/>
        
        <ImageView 
            android:id="@+id/pay_can_use_bean_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/pay_selectbox_normal"
            android:layout_marginRight="18dip"/>
    </RelativeLayout>
    -->
    <!-- 菜票 -->
    <RelativeLayout 
        android:id="@+id/pay_ticket_choose"
        android:layout_width="match_parent"
        android:layout_height="43dip"
        android:background="@color/color_app_base_5"
        android:layout_marginTop="1dip"
        android:orientation="horizontal">
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_global_14sp"
            android:textColor="@color/color_app_base_4"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="18dip"
            android:text="菜票"/>
        
        <TextView 
            android:id="@+id/pay_ticket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_global_14sp"
            android:textColor="@color/color_app_base_9"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="18dip"
            android:visibility="gone"/>
        
         <ImageView 
             android:id="@+id/pay_ticket_icon"
             android:layout_centerVertical="true"
             android:layout_alignParentRight="true"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginRight="18dip"
             android:src="@drawable/button_next"/>
    </RelativeLayout>
    
    <!-- 还需支付 -->
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="43dip"
        android:background="@color/color_app_base_5"
        android:layout_marginTop="1dip"
        android:orientation="horizontal">
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_global_14sp"
            android:textColor="@color/color_app_base_4"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="18dip"
            android:text="还需支付"/>
        
        <TextView 
            android:id="@+id/pay_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_global_14sp"
            android:textColor="@color/color_app_base_9"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="18dip"/>
    </RelativeLayout>
    
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:text="请选择支付方式"
        android:gravity="center_vertical"
        android:paddingLeft="18dip"
        android:textColor="@color/color_app_base_4"
        android:textSize="@dimen/dimen_global_16sp"/>
    
    <!-- 支付宝支付 -->
    <RelativeLayout 
        android:id="@+id/pay_way_zhifubao"
        android:layout_width="match_parent"
        android:layout_height="43dip"
        android:background="@drawable/white_list_selector_bg"
        android:visibility="gone"
        android:layout_marginTop="1dip"
        android:orientation="horizontal">
        
        <TextView 
            android:drawableLeft="@drawable/pay_zhifubao_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_global_14sp"
            android:textColor="@color/color_app_base_4"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:drawablePadding="10dip"
            android:gravity="center_vertical"
            android:layout_marginLeft="18dip"
            android:text="支付宝支付"/>
        
        <ImageView 
            android:id="@+id/pay_way_zhifubao_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/pay_selectbox_normal"
            android:layout_marginRight="18dip"/>
    </RelativeLayout>
    
    <!-- 微信支付 -->
    <RelativeLayout 
        android:id="@+id/pay_way_weixin"
        android:layout_width="match_parent"
        android:layout_height="43dip"
        android:visibility="gone"
        android:background="@drawable/white_list_selector_bg"
        android:layout_marginTop="1dip"
        android:orientation="horizontal">
        
        <TextView 
            android:drawableLeft="@drawable/pay_weixin_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_global_14sp"
            android:textColor="@color/color_app_base_4"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:drawablePadding="10dip"
            android:gravity="center_vertical"
            android:layout_marginLeft="18dip"
            android:text="微信支付"/>
        
        <ImageView 
            android:id="@+id/pay_way_weixin_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/pay_selectbox_normal"
            android:layout_marginRight="18dip"/>
    </RelativeLayout>
    
    <!-- 网银支付 -->
    <RelativeLayout 
        android:id="@+id/pay_way_wangying"
        android:layout_width="match_parent"
        android:layout_height="43dip"
        android:background="@drawable/white_list_selector_bg"
        android:layout_marginTop="1dip"
        android:visibility="gone"
        android:orientation="horizontal">
        
        <TextView 
            android:drawableLeft="@drawable/pay_union_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_global_14sp"
            android:textColor="@color/color_app_base_4"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:drawablePadding="10dip"
            android:gravity="center_vertical"
            android:layout_marginLeft="18dip"
            android:text="网银支付"/>
        
        <ImageView 
            android:id="@+id/pay_way_wangying_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/pay_selectbox_normal"
            android:layout_marginRight="18dip"/>
    </RelativeLayout>
    
    <!-- 货到付款 -->
    <RelativeLayout 
        android:id="@+id/pay_way_huodaofukuan"
        android:layout_width="match_parent"
        android:layout_height="43dip"
        android:background="@drawable/white_list_selector_bg"
        android:layout_marginTop="1dip"
        android:visibility="gone"
        android:orientation="horizontal">
        
        <TextView 
            android:drawableLeft="@drawable/pay_on_delivery_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_global_14sp"
            android:textColor="@color/color_app_base_4"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:drawablePadding="10dip"
            android:gravity="center_vertical"
            android:layout_marginLeft="18dip"
            android:text="货到付款"/>
        
        <ImageView 
            android:id="@+id/pay_way_huodaofukuan_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/pay_selectbox_normal"
            android:layout_marginRight="18dip"/>
    </RelativeLayout>
    <Space 
        android:layout_width="match_parent"
        android:layout_height="20dip"/>
    </LinearLayout>
    </ScrollView>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@color/color_app_base_5"
        android:paddingLeft="40dip"
        android:paddingRight="40dip"
        android:paddingTop="8dip"
        android:paddingBottom="8dip"
        android:orientation="horizontal">
        
        <Button 
            android:id="@+id/pay_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/nomal_button_nomal_bg"
            android:text="支付"
            android:textColor="@color/color_app_base_5"
            android:textSize="@dimen/dimen_global_16sp"/>
    </LinearLayout>
</LinearLayout>
