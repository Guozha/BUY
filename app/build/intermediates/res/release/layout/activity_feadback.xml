<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_app_base_23"
    android:orientation="vertical" >
    
	<EditText 
	    android:id="@+id/feadback_text"
	    android:layout_marginTop="8dip"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="12dip"
	    android:layout_marginRight="12dip"
	    android:textSize="@dimen/dimen_global_14sp"
	    android:textColor="@color/color_app_base_26"
	    android:textColorHint="@color/color_app_base_28"
	    android:background="@drawable/text_background"
	    android:minLines="8"
	    android:gravity="top"
	    android:maxLines="8"
	    android:enabled="true"
	    android:padding="8dip"
	    android:inputType="textMultiLine"
	    android:hint="有什么想说的，来吐槽吧(不要少于5个字)"/>
	
	<Button 
	    android:id="@+id/feadback_button"
	    android:layout_marginTop="40dip"
	    android:layout_width="match_parent"
	    android:layout_height="44dip"
	    android:text="提交"
	    android:textColor="@color/color_app_base_24"
	    android:textSize="@dimen/dimen_global_16sp"
	    android:layout_marginLeft="18dip"
	    android:layout_marginRight="18dip"
	    android:enabled="false"
	    android:background="@drawable/nomal_button_nomal_bg"/>
</LinearLayout>
