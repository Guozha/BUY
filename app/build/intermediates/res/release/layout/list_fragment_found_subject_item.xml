<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dip">
    <ImageView 
        android:id="@+id/subject_item_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:layout_marginLeft="3dip"
        android:layout_marginRight="3dip"/>
    
    <TextView 
        android:id="@+id/subject_item_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dip"
        android:textColor="@color/white"
        android:gravity="center"
        android:paddingBottom="3dip"
        android:paddingRight="3dip"
        android:textSize="@dimen/dimen_global_12sp"/>
    
    <TextView 
        android:id="@+id/subject_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_gravity="bottom"
        android:paddingBottom="8dip"
        android:paddingTop="8dip"
        android:layout_marginLeft="3dip"
        android:layout_marginRight="3dip"
        android:paddingLeft="15dip"
        android:paddingRight="15dip"
        android:ellipsize="end"
        android:background="@color/color_app_base_12"
        android:textSize="@dimen/dimen_global_14sp"/>
</FrameLayout>
