<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_app_base_23"
    android:orientation="vertical" >
    <LinearLayout 
        android:id="@+id/cart_address_area"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:gravity="center_vertical"
        android:visibility="gone"
        android:background="@drawable/nomal_list_item_bg"
        android:orientation="horizontal">
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:src="@drawable/icon_truck"
            android:layout_marginLeft="18dip"
            android:layout_marginRight="12dip"/>
        <TextView 
            android:id="@+id/cart_address"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/dimen_global_14sp"
            android:textColor="@color/color_app_base_26"/>
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="12dip"
            android:src="@drawable/button_next"
            android:scaleType="centerInside"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_app_base_27"/>
    <!-- 购物车商品列表 -->
    <FrameLayout 
    android:layout_width="match_parent"
    android:layout_height="0dip"
    android:layout_weight="1"
    android:layout_marginTop="12dip"
    android:background="@color/color_app_base_24">
    <LinearLayout 
        android:id="@+id/cart_empty_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:src="@drawable/basket_empty"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dip"
            android:textSize="@dimen/dimen_global_16sp"
            android:textColor="@color/color_app_base_8"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:gravity="center"
            android:text="您的购物车还没有商品，去添加吧"/>
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
		android:layout_height="match_parent"
        android:orientation="vertical">
	        <View 
	        android:layout_width="match_parent"
	        android:layout_height="1px"
	        android:background="@color/color_app_base_7"/>
		    <ExpandableListView 
		        android:id="@+id/expandable_cart_list"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:headerDividersEnabled="true"
		        android:footerDividersEnabled="true"
		        android:groupIndicator="@null"
		        android:divider="@color/color_app_base_27"
		        android:dividerHeight="1px"/>
		     <View 
	        android:layout_width="match_parent"
	        android:layout_height="1px"
	        android:background="@color/color_app_base_7"/>
    </LinearLayout>
    </FrameLayout>
    <View 
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_app_base_7"/>
    <Space 
        android:layout_width="match_parent"
        android:layout_height="8dip"/>
    
    <!-- 下面合计部分 -->
   	<View 
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_app_base_7"/>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:paddingLeft="12dip"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@color/color_app_base_5">
        <LinearLayout 
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">
         <TextView 
             android:id="@+id/cart_total_message"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="合计￥0.00"
             android:textSize="@dimen/dimen_global_16sp"
             android:textColor="@color/color_app_base_25"/>
         <LinearLayout 
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal">
         <TextView
             android:id="@+id/cart_server_money" 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="预计服务费0元"
             android:textSize="@dimen/dimen_global_12sp"
             android:textColor="@color/color_app_base_26"/>
         
         <TextView 
             android:id="@+id/cart_free_money_gap"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="，离免服务费还差0元"
             android:singleLine="true"
             android:ellipsize="end"
             android:textSize="@dimen/dimen_global_12sp"
             android:textColor="@color/color_app_base_26"/>
         </LinearLayout>
        </LinearLayout>     
        <Button 
            android:id="@+id/cart_to_order_button"
            android:layout_width="100dip"
            android:layout_height="match_parent"
            android:text="选好了"
            android:layout_marginLeft="1dip"
            android:background="@drawable/cart_button_bg"
            android:textSize="@dimen/dimen_global_14sp"
            android:textColor="@color/color_app_base_24"/>
    </LinearLayout>
</LinearLayout>
