<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_app_base_6">

	<!-- 有效的菜票 -->
    <ListView 
        android:id="@+id/my_ticket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/color_app_base_6"
        android:background="@color/color_app_base_5"
        android:layout_marginTop="8dip"
        android:dividerHeight="5dip"/>
    
    <LinearLayout 
	    android:id="@+id/empty_view"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_centerInParent="true"
	    android:gravity="center_horizontal"
	    android:orientation="vertical">
	<ImageView 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:src="@drawable/coupon_empty"
	    android:scaleType="centerInside"/>
	<TextView 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="18dip"
	    android:textSize="@dimen/dimen_global_16sp"
	    android:textColor="@color/color_app_base_8"
	    android:text="您还没有菜票"/>
	</LinearLayout>
</RelativeLayout>
