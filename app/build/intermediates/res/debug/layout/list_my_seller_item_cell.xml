<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    

    <LinearLayout 
        android:layout_width="match_parent" 
        android:layout_height="80dip"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dip"
            android:layout_marginRight="18dip"
            android:scaleType="centerInside"
            android:src="@drawable/main_seller_icon"/>
        
        <LinearLayout 
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">
            
            <TextView 
                android:id="@+id/seller_descript"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="菜摊1号 卖菜哥 18923432422"
                android:textSize="@dimen/dimen_global_16sp"
                android:textColor="@color/color_app_base_4"/>
            
            <TextView 
                android:id="@+id/seller_visit_count"
                android:layout_marginTop="10dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已有39人光顾"
                android:textSize="@dimen/dimen_global_16sp"
                android:textColor="@color/color_app_base_4"/>
            
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
