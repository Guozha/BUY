<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_app_base_33"
    android:orientation="vertical" >
    <LinearLayout
        android:id="@+id/select_weight_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="18dip"
        android:paddingRight="18dip"
        android:orientation="vertical" >
		<ImageView 
		    android:layout_marginTop="48dip"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:scaleType="centerInside"
		    android:layout_marginLeft="80dip"
		    android:layout_marginBottom="-2dip"
		    android:src="@drawable/triangle"/>
		<LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:background="@drawable/market_address_background"
		    android:orientation="vertical">
		    <TextView 
		      	android:layout_width="match_parent"
		      	android:layout_height="48dip"
		      	android:text="选择配送地址"
		      	android:paddingLeft="18dip"
		      	android:gravity="center_vertical"
		      	android:textColor="@color/color_app_base_4"
		      	android:textSize="@dimen/dimen_global_16sp"/>
		    <View 
		        android:layout_width="match_parent"
		        android:layout_height="1px"
		        android:background="@color/color_app_base_7"/>
		    <ListView 
		        android:id="@+id/choose_address_list"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:divider="@color/color_app_base_7"
		        android:dividerHeight="1px"/>
		    <View 
		        android:layout_width="match_parent"
		        android:layout_height="1px"
		        android:background="@color/color_app_base_7"/>
		    <TextView 
		        android:id="@+id/add_new_address"
		        android:layout_width="match_parent"
		        android:layout_height="48dip"
		        android:text="添加新地址"
		        android:gravity="center"
		        android:textColor="@color/color_app_base_21"
		        android:textSize="@dimen/dimen_global_14sp"/>
		</LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/select_weight_free_layout"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"/>
</LinearLayout><!-- From: file:/H:/GitHub/BUY/app/src/main/res/layout/dialog_choose_address.xml -->