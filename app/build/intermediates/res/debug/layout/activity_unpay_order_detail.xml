<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_app_base_6"
    android:orientation="vertical" >
    
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="98dip"
	    android:background="@color/color_app_base_5"
	    android:gravity="center_vertical"
	    android:paddingLeft="18dip"
	    android:orientation="vertical">
	    
	    <TextView 
	        android:id="@+id/order_detail_num"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/color_app_base_4"
	        android:textSize="@dimen/dimen_global_14sp"/>
	    
	    <TextView 
	        android:id="@+id/order_detail_time"
	        android:layout_marginTop="10dip"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/color_app_base_4"
	        android:textSize="@dimen/dimen_global_14sp"/>
	    	    
	    <TextView 
	        android:id="@+id/order_descript_text"
	        android:layout_marginTop="10dip"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/color_app_base_4"
	        android:textSize="@dimen/dimen_global_14sp"/>
	</LinearLayout>
	<View 
	    android:layout_width="match_parent"
	    android:layout_height="1px"
	    android:background="@color/color_app_base_27"/>
	<View 
	    android:layout_width="match_parent"
	    android:layout_height="1px"
	    android:background="@color/color_app_base_27"/>
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_marginTop="5dip"
	    android:layout_height="74dip"
	    android:background="@color/color_app_base_5"
	    android:paddingLeft="18dip"
	    android:gravity="center_vertical"
	    android:orientation="vertical">
	    
	    <TextView 
	        android:id="@+id/order_detail_address_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/color_app_base_4"
	        android:textSize="@dimen/dimen_global_14sp"/>
	    
	   <TextView 
	        android:id="@+id/order_detail_address_detail"
	        android:layout_marginTop="10dip"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/color_app_base_4"
	        android:textSize="@dimen/dimen_global_14sp"/>
	</LinearLayout>
	<View 
	    android:layout_width="match_parent"
	    android:layout_height="1px"
	    android:background="@color/color_app_base_27"/>
	<TextView 
	    android:id="@+id/order_detail_total_price"
	    android:layout_width="match_parent"
	    android:layout_height="38dip"
	    android:paddingLeft="18dip"
	    android:gravity="center_vertical"
	    android:textColor="@color/color_app_base_1"
	    android:textSize="@dimen/dimen_global_14sp"/>	
	<View 
	    android:layout_width="match_parent"
	    android:layout_height="1px"
	    android:background="@color/color_app_base_27"/>
	<ExpandableListView 
        android:id="@+id/expandable_order_detail_list"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:headerDividersEnabled="true"
        android:footerDividersEnabled="true"
        android:groupIndicator="@null"
        android:background="@color/color_app_base_23"
        android:divider="@color/color_app_base_27"
        android:dividerHeight="1px"/>
	    
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="50dip"
	    android:background="@color/color_app_base_5"
	    android:gravity="center_vertical"
	    android:orientation="horizontal">
	    <Space 
	        android:layout_width="18dip"
	        android:layout_height="match_parent"/>
	    <Button 
	        android:id="@+id/order_detail_cancel"
	        android:layout_width="0dip"
	        android:layout_weight="1"
	        android:layout_height="34dip"
	        android:text="取消订单"
	        android:gravity="center"
	        android:textSize="@dimen/dimen_global_14sp"
	        android:textColor="@color/color_app_base_5"
	        android:background="@drawable/grey_button_nomal_bg"/>
	    <Space 
	        android:layout_width="18dip"
	        android:layout_height="match_parent"/>
	    <Button 
	        android:id="@+id/order_detail_pay"
	        android:layout_width="0dip"
	        android:layout_weight="1"
	        android:layout_height="34dip"
	        android:text="立即支付"
	        android:gravity="center"
	        android:textSize="@dimen/dimen_global_14sp"
	        android:textColor="@color/color_app_base_5"
	        android:background="@drawable/nomal_button_nomal_bg"/>
	    <Space 
	        android:layout_width="18dip"
	        android:layout_height="match_parent"/>
	</LinearLayout>
</LinearLayout>
