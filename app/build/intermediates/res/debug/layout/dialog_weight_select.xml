<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_app_base_33"
    android:orientation="vertical" >
    <LinearLayout
        android:id="@+id/select_weight_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dip"
            android:textColor="@color/color_app_base_25"
            android:text="重量 - 金额"
            android:gravity="center"
            android:textSize="@dimen/dimen_global_16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_app_base_27" />

        <FrameLayout 
            android:layout_width="match_parent"
            android:layout_height="180dip">
	        <com.guozha.buy.view.scroll.WheelView
	            android:id="@+id/select_weight_wheelview"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:layout_gravity="center_horizontal"
	            android:layout_marginBottom="2dp"
	            android:layout_marginTop="2dp" />
	        <RelativeLayout 
	            android:id="@+id/custom_weight_area"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:gravity="center_horizontal"
	            android:visibility="gone">
	            <EditText 
	                android:id="@+id/select_custom_weight_text"
	                android:layout_width="60dip"
	                android:layout_height="wrap_content"
	                android:layout_alignParentBottom="true"
	                android:layout_marginBottom="20dip"
	                android:lines="1"
	                android:singleLine="true"
	                android:inputType="number"
	                android:background="@drawable/main_line"
	                android:textSize="@dimen/dimen_global_14sp"
	                android:textColor="@color/color_app_base_4"
	                android:maxLength="4"
	                android:text="10"/>
	            <TextView 
	                android:id="@+id/select_custom_weight_unit"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textSize="@dimen/dimen_global_16sp"
	                android:textColor="@color/color_app_base_26"
	                android:layout_alignBottom="@id/select_custom_weight_text"
	                android:layout_toRightOf="@id/select_custom_weight_text"
	                android:text="斤"/>
	        </RelativeLayout>
		</FrameLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_app_base_27"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dip"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/select_weight_to_details"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/nomal_list_item_bg"
                android:text="详情"
                android:textColor="@color/color_app_base_22"
                android:textSize="16sp" />
			<View 
			    android:layout_width="1px"
			    android:layout_height="match_parent"
			    android:background="@color/color_app_base_27"/>
            <TextView
                android:id="@+id/select_weight_confirm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/nomal_list_item_bg"
                android:text="加入购物车"
                android:textColor="@color/color_app_base_21"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/select_weight_free_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/select_weight_bottom_layout" />

</RelativeLayout><!-- From: file:/H:/GitHub/BUY/app/src/main/res/layout/dialog_weight_select.xml -->