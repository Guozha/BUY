                android:textSize="@dimen/dimen_global_12sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_weight="80"/>
        </LinearLayout>
    </LinearLayout>
    
    <Space
        android:layout_width="match_parent"
        android:layout_height="5dip"/>
    
