<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="40dip"
	    android:gravity="center_vertical"
	    android:orientation="horizontal">
	    <TextView 
	        android:id="@+id/group_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="西红柿炒鸡蛋"
	        android:layout_marginLeft="18dip"
	        android:textColor="@color/color_app_base_4"
	        android:textSize="@dimen/dimen_global_14sp"/>
	    <TextView 
	        android:id="@+id/group_amount"
	        android:layout_marginLeft="8dip"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="1份"
	        android:textColor="@color/color_app_base_4"
	        android:textSize="@dimen/dimen_global_14sp"/>
	   	<TextView 
	   	    android:id="@+id/group_price"
	   	    android:layout_marginLeft="8dip"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="￥16.00"
	        android:textColor="@color/color_app_base_4"
	        android:textSize="@dimen/dimen_global_14sp"/>
	   	
	   	<Space 
	        android:layout_width="0dip"
	        android:layout_height="match_parent"
	        android:layout_weight="1"/>
	    
	    <LinearLayout 
	        android:id="@+id/group_grade_area"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal">
	    <ImageView 
	        android:id="@+id/group_grade_face1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:scaleType="centerInside"
	        android:layout_marginRight="20dip"
	        android:src="@drawable/main_emoticons_cool_normal"/>
	    <ImageView 
	        android:id="@+id/group_grade_face2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:scaleType="centerInside"
	        android:layout_marginRight="20dip"
	        android:src="@drawable/main_emoticons_wondering_normal"/>
	    <ImageView 
	        android:id="@+id/group_grade_face3"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:scaleType="centerInside"
	        android:layout_marginRight="20dip"
	        android:src="@drawable/main_emoticons_angry_normal"/>
	    </LinearLayout>
	</LinearLayout>
</LinearLayout>
