<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="324dip"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@drawable/dialogue_background"
    android:orientation="vertical" >
    

    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        
        <TextView 
            android:layout_marginTop="10dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="现在开始，让小菜帮您"
            android:textColor="@color/color_app_base_1"
            android:textSize="@dimen/dimen_global_20sp"/>
        
        <TextView 
            android:layout_marginTop="20dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择配菜"
            android:layout_marginLeft="10dip"
            android:textColor="@color/color_app_base_4"
            android:textSize="@dimen/dimen_global_16sp"
            android:drawablePadding="12dip"
            android:drawableLeft="@drawable/dialogue_icon_01"/>
        
        <TextView 
            android:layout_marginTop="8dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="送货上门"
            android:layout_marginLeft="10dip"
            android:textColor="@color/color_app_base_4"
            android:textSize="@dimen/dimen_global_16sp"
            android:drawablePadding="12dip"
            android:drawableLeft="@drawable/dialogue_icon_02"/>
        
        <TextView 
            android:layout_marginTop="8dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更多体验"
            android:layout_marginLeft="10dip"
            android:textColor="@color/color_app_base_4"
            android:textSize="@dimen/dimen_global_16sp"
            android:drawablePadding="12dip"
            android:drawableLeft="@drawable/dialogue_icon_03"/>
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dip"
        android:layout_marginBottom="8dip"
        android:orientation="horizontal">
        
        <Button 
            android:id="@+id/cancel_button"
            android:layout_width="130dip"
            android:layout_height="40dip"
            android:text="一会再说"
            android:textColor="@color/color_app_base_5"
            android:textSize="@dimen/dimen_global_16sp"
            android:background="@drawable/grey_button_nomal_bg"/>
        
       <Button 
            android:id="@+id/login_button"
            android:layout_marginLeft="20dip"
            android:layout_width="130dip"
            android:layout_height="40dip"
            android:text="现在登录"
            android:textColor="@color/color_app_base_5"
            android:background="@drawable/nomal_button_nomal_bg"
            android:textSize="@dimen/dimen_global_16sp"/>
    </LinearLayout>
</LinearLayout>
