<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_app_base_24"
    android:gravity="center_vertical"
    android:paddingRight="8dip"
    android:orientation="horizontal" >
    
	<TextView 
	    android:id="@+id/menu_detail_list_item_name"
	    android:layout_width="0dip"
	    android:layout_weight="2"
	    android:layout_height="40dip"
	    android:layout_marginLeft="15dip"
	    android:gravity="center_vertical"
	    android:textSize="@dimen/dimen_global_14sp"
	    android:textColor="@color/color_app_base_22"/>
	
	<TextView 
	    android:id="@+id/menu_detail_list_item_weight"
	    android:layout_width="0dip"
	    android:layout_weight="3"
	    android:layout_height="40dip"
	    android:gravity="center_vertical"
	    android:textSize="@dimen/dimen_global_14sp"
	    android:textColor="@color/color_app_base_22"/>
	
	<CheckBox 
	    android:id="@+id/menu_detail_list_item_check"
	    android:layout_width="35dip"
	    android:layout_height="35dip"
	    android:gravity="center"
	    android:button="@drawable/checkbox_style"
	    android:background="@drawable/checkbox_bg"
	    android:checked="true"/>
</LinearLayout>
