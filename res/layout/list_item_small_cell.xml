<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/vegetable_cell_item1"
        android:layout_height="wrap_content"
        android:layout_width="0dip"
        android:background="@color/color_app_base_5"
        android:paddingBottom="8dip"
        android:layout_weight="1">
        
        <!-- 这里的高度暂时改为0dip -->
        <ImageView 
            android:id="@+id/vegetable_cell_icon"
            android:layout_width="wrap_content"
            android:layout_height="0dip"
            android:scaleType="centerInside"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:visibility="invisible"
            android:src="@drawable/main_add_in"/>
        <ImageView 
            android:id="@+id/vegetable_cell_image"
            android:layout_marginTop="8dip"
            android:layout_below="@id/vegetable_cell_icon"
            android:layout_width="match_parent"
            android:paddingLeft="8dip"
            android:paddingRight="8dip"
            android:layout_height="100dip"
            android:scaleType="fitCenter"
            android:src="@drawable/default_icon"/>
        
        <TextView
            android:id="@+id/vegetable_cell_name"
            android:layout_below="@id/vegetable_cell_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:paddingLeft="8dip"
            android:paddingRight="8dip"
            android:textColor="@color/color_app_base_26"
            android:maxLines="2"
            android:gravity="bottom"
            android:lines="2"
            android:ellipsize="end"
            android:layout_centerHorizontal="true"/>
       <LinearLayout 
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@id/vegetable_cell_name"
           android:orientation="horizontal">
	       <TextView
              android:id="@+id/vegetable_cell_price"
              android:layout_width="0dip"
              android:layout_weight="1"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:textSize="12sp"
              android:singleLine="true"
              android:ellipsize="end"
              android:textColor="@color/color_app_base_26"/>
           <TextView 
               android:id="@+id/vegetable_cell_specail_price"
               android:layout_width="0dip"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:textSize="12sp"
               android:singleLine="true"
               android:gravity="center"
               android:ellipsize="end"
               android:textColor="@color/color_app_base_21"/>
        </LinearLayout>
        <ImageView 
            android:id="@+id/vegetable_bargain_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dip"
            android:layout_marginTop="3dip"
            android:scaleType="centerInside"
            android:src="@drawable/tag_tejia"
            android:visibility="gone"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"/>
    </RelativeLayout>