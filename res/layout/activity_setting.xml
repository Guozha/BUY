<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_app_base_6"
    android:orientation="vertical" >
    
	<ListView 
	    android:id="@+id/setting_list"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:divider="@color/color_app_base_27"
	    android:background="@color/color_app_base_24"
	    android:dividerHeight="1px"/>
	<View 
	    android:layout_width="match_parent"
	    android:layout_height="1px"
	    android:background="@color/color_app_base_27"/>
	
	<View 
	    android:layout_width="match_parent"
	    android:layout_height="1px"
	    android:layout_marginTop="12dip"
	    android:background="@color/color_app_base_27"/>
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:paddingTop="18dip"
	    android:paddingBottom="10dip"
	    android:background="@color/color_app_base_24">
	    
	    <TextView 
	        android:id="@+id/setting_share_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="分享二维码给好友"
	        android:textColor="@color/color_app_base_26"
	        android:textSize="@dimen/dimen_global_16sp"
	        android:layout_marginLeft="12dip"/>
	    
	    <ImageView 
	        android:id="@+id/setting_erweima"
	        android:layout_marginTop="20dip"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:scaleType="centerInside"
	        android:layout_below="@id/setting_share_title"
	        android:layout_centerHorizontal="true"
	        android:src="@drawable/img_two_dimensional_code"/>
	    
	    <TextView 
	        android:id="@+id/setting_version_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="@dimen/dimen_global_14sp"
	        android:textColor="@color/color_app_base_26"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="10dip"
	        android:layout_below="@id/setting_erweima"/>
	</RelativeLayout>
	<View 
	    android:layout_width="match_parent"
	    android:layout_height="1px"
	    android:background="@color/color_app_base_27"/>
	<Button 
	    android:id="@+id/setting_login_out_button"
	    android:layout_width="match_parent"
	    android:layout_height="40dip"
	    android:layout_marginLeft="12dip"
	    android:layout_marginRight="12dip"
	    android:text="退出登录"
	    android:gravity="center"
	    android:layout_marginTop="30dip"
	    android:textColor="@color/color_app_base_24"
	    android:textSize="@dimen/dimen_global_16sp"
	    android:background="@drawable/setting_logout_btn_bg"/>
</LinearLayout>
