<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="240dip"
	    android:gravity="center_horizontal"
	    android:layout_marginTop="1dip"
	    android:background="@color/color_app_base_5"
	    android:orientation="vertical">
	    
	    <ImageView 
	        android:id="@+id/detail_image"
	        android:layout_width="match_parent"
	        android:layout_height="180dip"
	        android:scaleType="fitCenter"
	        android:src="@drawable/default_icon"/>
	    
	    <TextView
	        android:id="@+id/detail_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="青椒"
	        android:textSize="@dimen/dimen_global_14sp"
	        android:textColor="@color/color_app_base_4"/>
	    
	    <TextView 
	        android:id="@+id/vegetable_detail_item_price"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="8dip"
	        android:text="￥5.6 / 斤"
	        android:textSize="@dimen/dimen_global_14sp"
	        android:textColor="@color/color_app_base_4"/>
	</LinearLayout>
	
	
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@color/color_app_base_5"
	    android:layout_marginTop="4dip"
	    android:padding="18dip">
	    
		<TextView 
		    android:id="@+id/vegetable_description"
		    android:layout_height="wrap_content"
		    android:layout_width="match_parent"
		    android:textColor="@color/color_app_base_4"
		    android:textSize="@dimen/dimen_global_14sp"
		    android:lineSpacingExtra="5dip"
		    android:maxLines="4"
		    android:ellipsize="end"/>
	
	    <LinearLayout 
	        android:id="@+id/cookbook_add_cart_button"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/vegetable_description"
		    android:layout_alignParentRight="true"
		    android:layout_marginTop="12dip"
		    android:layout_marginRight="20dip"
		    android:gravity="center_horizontal"
	        android:orientation="vertical">
	        <ImageView 
		        android:layout_height="wrap_content"
		        android:layout_width="wrap_content"
		        android:scaleType="centerInside"
		        android:src="@drawable/main_basket_icon_02"/>
	        <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="8dip"
		        android:text="加入购物车"
		        android:textColor="@color/color_app_base_4"
		        android:textSize="@dimen/dimen_global_14sp"/>
	    </LinearLayout>
	   
	    <LinearLayout 
	        android:id="@+id/cookbook_collection_button"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/vegetable_description"
		    android:layout_toLeftOf="@id/cookbook_add_cart_button"
		    android:layout_marginTop="12dip"
		    android:layout_marginRight="20dip"
		    android:gravity="center_horizontal"
	        android:orientation="vertical">
		    <ImageView 
		        android:layout_height="wrap_content"
		        android:layout_width="wrap_content"
		        android:scaleType="centerInside"
		        android:src="@drawable/main_collect_button"/>
	  	    <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="8dip"
		        android:text="收藏菜品"
		        android:textColor="@color/color_app_base_4"
		        android:textSize="@dimen/dimen_global_14sp"/>
	    </LinearLayout>
	
	</RelativeLayout>
	
	<TextView 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="相关菜谱"
	    android:textSize="@dimen/dimen_global_16sp"
	    android:textColor="@color/color_app_base_4"
	    android:layout_marginTop="12dip"
	    android:layout_marginBottom="12dip"
	    android:layout_marginLeft="18dip"/>
</LinearLayout>
