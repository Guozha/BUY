<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
 	<Button 
 	    android:id="@+id/youmeng_phoneid_test"
 	    android:layout_width="wrap_content"
 	    android:layout_height="wrap_content"
 	    android:text="获取友盟测试手机ID"/>
 	
 	<View
 	    android:layout_width="match_parent"
 	    android:layout_height="1dip"
 	    android:background="#333333"/>
 	
 	<TextView 
 	    android:layout_width="wrap_content"
 	    android:layout_height="wrap_content"
 	    android:text="分享测试"/>
 	
 	<Button 
 	    android:id="@+id/share_to_qq"
 	    android:layout_width="wrap_content"
 	    android:layout_height="wrap_content"
 	    android:text="QQ"/>
 	
 	<View
 	    android:layout_width="match_parent"
 	    android:layout_height="1dip"
 	    android:background="#333333"/>
 	
 	<LinearLayout 
 	    android:layout_width="match_parent"
 	    android:layout_height="wrap_content"
 	    android:orientation="horizontal">
 	    <EditText 
 	        android:id="@+id/set_alarm_hour"
 	        android:layout_width="40dip"
 	        android:layout_height="wrap_content"
 	        android:text="0"/>
 	    <TextView 
 	        android:layout_width="wrap_content"
 	        android:layout_height="wrap_content"
 	        android:text="小时"/>
 	    <EditText 
 	        android:id="@+id/set_alarm_minute"
 	        android:layout_width="40dip"
 	        android:layout_height="wrap_content"
 	        android:text="0"/>
 	    <TextView 
 	        android:layout_width="wrap_content"
 	        android:layout_height="wrap_content"
 	        android:text="分"/>
 	    <Button 
 	        android:id="@+id/set_alarm_button"
 	        android:layout_width="wrap_content"
 	        android:layout_height="wrap_content"
 	        android:text="设置闹钟"/>
 	</LinearLayout>
 	
 	<Button 
 	    android:id="@+id/weight_selected_dialog_test"
 	    android:layout_width="wrap_content"
 	    android:layout_height="wrap_content"
 	    android:text="价格选择对话框测试"/>
</LinearLayout>
