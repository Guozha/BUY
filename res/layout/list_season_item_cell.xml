<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="160dip"
	    android:background="@drawable/main_background"
	    android:padding="5dip"
	    android:gravity="center_vertical"
	    android:orientation="horizontal">
	    
	    <ImageView 
	        android:id="@+id/season_list_item_icon"
	        android:layout_width="0dip"
	        android:layout_height="match_parent"
	        android:layout_weight="320"
	        android:scaleType="centerInside"
	        android:src="@drawable/main_season_goods_01"/>
	    
	    <TextView 
	        android:id="@+id/season_list_item_description"
	        android:layout_width="0dip"
	        android:layout_weight="354"
	        android:layout_marginLeft="5dip"
	        android:layout_height="wrap_content"
	        android:lineSpacingExtra="5dip"
	        android:background="@drawable/main_season_describe_background"
	        android:textColor="@color/color_app_base_4"
	        android:maxLines="4"
	        android:ellipsize="end"
	        android:textSize="@dimen/dimen_global_16sp"
	        android:text="香椿，性香炉，味道苦萍，入肺；味道，大肠经"
	        />
	</LinearLayout>
</LinearLayout>
