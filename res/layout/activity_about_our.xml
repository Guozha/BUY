<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_app_base_6"
    android:gravity="center_horizontal"
    android:orientation="vertical" >
    
	<ImageView 
	    android:id="@+id/logo_icon"
	    android:layout_marginTop="30dip"
	    android:layout_width="72dip"
	    android:layout_height="72dip"
	    android:scaleType="centerInside"
	    android:src="@drawable/logo_icon"/>
	
	<TextView 
	    android:id="@+id/about_our_version_name"
	    android:layout_marginTop="10dip"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textSize="@dimen/dimen_global_16sp"
	    android:textColor="@color/color_app_base_4"
	    android:text="爱掌勺3.0.1"/>
	
	<View 
	    android:layout_marginTop="30dip"
	    android:layout_width="match_parent"
	    android:layout_height="1px"
	    android:background="@color/color_app_base_7"/>
	<TextView 
	    android:id="@+id/about_our_website"
	    android:layout_width="match_parent"
	    android:layout_height="48dip"
	    android:text="官方网站：http://www.aizhangshao.com"
	    android:textColor="@color/color_app_base_4"
	    android:textSize="@dimen/dimen_global_14sp"
	    android:background="@color/color_app_base_5"
	    android:gravity="center_vertical"
	    android:paddingLeft="18dip"/>
	<View 
	    android:layout_width="match_parent"
	    android:layout_height="1px"
	    android:background="@color/color_app_base_7"/>
	<TextView 
	     android:id="@+id/about_our_weixin"
	    android:layout_width="match_parent"
	    android:layout_height="48dip"
	    android:text="微信公众号：爱掌勺"
	    android:textColor="@color/color_app_base_4"
	    android:textSize="@dimen/dimen_global_14sp"
	    android:background="@drawable/white_list_selector_bg"
	    android:gravity="center_vertical"
	    android:paddingLeft="18dip"/>	
	<View 
	    android:layout_width="match_parent"
	    android:layout_height="1px"
	    android:background="@color/color_app_base_7"/>
	<TextView 
	    android:id="@+id/about_our_weibo"
	    android:layout_width="match_parent"
	    android:layout_height="48dip"
	    android:text="官方微博：爱掌勺"
	    android:textColor="@color/color_app_base_4"
	    android:textSize="@dimen/dimen_global_14sp"
	    android:background="@drawable/white_list_selector_bg"
	    android:gravity="center_vertical"
	    android:paddingLeft="18dip"/>			
	<View 
	    android:layout_width="match_parent"
	    android:layout_height="1px"
	    android:background="@color/color_app_base_7"/>
	<TextView 
	    android:id="@+id/about_our_qq_group"
	    android:layout_width="match_parent"
	    android:layout_height="48dip"
	    android:text="QQ粉丝群：100179552"
	    android:textColor="@color/color_app_base_4"
	    android:textSize="@dimen/dimen_global_14sp"
	    android:background="@drawable/white_list_selector_bg"
	    android:gravity="center_vertical"
	    android:paddingLeft="18dip"/>	
	<View 
	    android:layout_width="match_parent"
	    android:layout_height="1px"
	    android:background="@color/color_app_base_7"/>
</LinearLayout>
