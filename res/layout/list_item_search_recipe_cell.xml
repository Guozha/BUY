<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="80dip"
        android:background="@color/color_app_base_5"
        android:orientation="horizontal">
        
        <ImageView 
            android:id="@+id/search_recipe_image"
            android:layout_marginLeft="18dip"
            android:layout_width="90dip"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@drawable/default_icon"
            android:layout_marginRight="12dip"/>
        
        <LinearLayout 
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">
            
            <TextView 
                android:id="@+id/search_recipe_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="青椒炒猪肚"
                android:textSize="@dimen/dimen_global_16sp"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/color_app_base_4"/>
            
            <TextView 
                android:id="@+id/search_recipe_descript"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="主料：青椒 3两，猪肚 5两"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginTop="18dip"
                android:textSize="@dimen/dimen_global_14sp"
                android:textColor="@color/color_app_base_4"/>
        </LinearLayout>
        
        <ImageView 
            android:id="@+id/search_recipe_addcart_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:scaleType="centerInside"
            android:src="@drawable/main_basket_icon_01"
            android:paddingLeft="18dip"
            android:paddingRight="18dip"/>
    </LinearLayout>
</LinearLayout>
