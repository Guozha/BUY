<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="88dip"
	    android:orientation="horizontal"
	    android:gravity="center_vertical"
	    android:background="@color/color_app_base_24">
	    
	    <ImageView 
	        android:id="@+id/cook_book_imag"
	        android:layout_height="80dip"
	        android:layout_width="80dip"
	        android:scaleType="centerInside"
	        android:layout_marginLeft="12dip"
	        android:layout_marginRight="12dip"
	        android:src="@drawable/default_icon"/>
	    
	    <LinearLayout
	        android:layout_width="0dip"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:gravity="center_vertical"
	        android:orientation="vertical">
	        
	        <TextView 
	            android:id="@+id/cooke_book_name"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="青椒炒猪肚"
	            android:textSize="@dimen/dimen_global_16sp"
	            android:singleLine="true"
	            android:ellipsize="end"
	            android:textColor="@color/color_app_base_26"/>
	        
	        <LinearLayout 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:gravity="center_vertical"
	            android:layout_marginTop="17dip"
	            android:orientation="horizontal">
	            <ImageView 
	                android:layout_width="18dip"
	                android:layout_height="18dip"
	                android:scaleType="centerInside"
	                android:src="@drawable/tag_cooking"/>
	            <TextView 
	                android:id="@+id/cooke_way"
	                android:layout_marginLeft="8dip"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textSize="@dimen/dimen_global_10sp"
	                android:textColor="@color/color_app_base_22"/>
	            <ImageView 
	                android:layout_width="18dip"
	                android:layout_height="18dip"
	                android:scaleType="centerInside"
	                android:layout_marginLeft="15dip"
	                android:src="@drawable/tag_cooktime"/>
	            <TextView 
	                android:id="@+id/cooke_time"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="8dip"
	                android:textSize="@dimen/dimen_global_10sp"
	                android:textColor="@color/color_app_base_22"/>
	            <ImageView 
	                android:layout_width="18dip"
	                android:layout_height="18dip"
	                android:scaleType="centerInside"
	                android:layout_marginLeft="15dip"
	                android:src="@drawable/tag_calories"/>
	            <TextView 
	                android:id="@+id/cooke_calorie"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="8dip"
	                android:textSize="@dimen/dimen_global_10sp"
	                android:textColor="@color/color_app_base_22"/>
	        </LinearLayout>
	    </LinearLayout>
	    <!--  
	    <ImageView 
	        android:id="@+id/cook_book_collection"
	        android:layout_height="match_parent"
	        android:layout_width="wrap_content"
	        android:paddingLeft="18dip"
	        android:paddingRight="18dip"
	        android:src="@drawable/main_basket_icon_01"/>
	   -->
	</LinearLayout>
</LinearLayout>
