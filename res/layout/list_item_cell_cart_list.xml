<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="50dp"
	    android:orientation="horizontal"
	    android:background="@drawable/nomal_list_item_bg"
	    android:gravity="center_vertical">
    <TextView 
        android:id="@+id/cart_list_cell_title"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="西红柿炒鸡蛋"
        android:gravity="center_vertical|left"
        android:layout_marginLeft="18dip"
        android:textColor="@color/color_app_base_4"
        android:textSize="@dimen/dimen_global_14sp"
        android:singleLine="true"
        android:layout_marginRight="10dip"
        android:ellipsize="end"/>
    
    <Button 
        android:id="@+id/cart_list_cell_minus"
        android:layout_width="36dip"
        android:layout_height="36dip"
        android:background="@drawable/cart_item_minus_button_bg"/>
    
    <TextView 
        android:id="@+id/cart_list_cell_num"
        android:layout_width="100dip"
        android:layout_height="wrap_content"
        android:textColor="@color/color_app_base_4"
        android:textSize="@dimen/dimen_global_14sp"
        android:singleLine="true"
        android:ellipsize="end"
        android:gravity="center"
        android:text="1份"/>
    
    <Button
        android:id="@+id/cart_list_cell_plus"
        android:layout_width="36dip"
        android:layout_height="36dip"
        android:background="@drawable/cart_item_plus_button_bg"/>
    
    <TextView 
        android:id="@+id/cart_list_cell_price"
        android:layout_width="100dip"
        android:layout_height="wrap_content"
        android:textColor="@color/color_app_base_4"
        android:textSize="@dimen/dimen_global_14sp"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginRight="12dip"
        android:gravity="center_vertical|right"
        android:text="￥13.00"/>
    </LinearLayout>
</LinearLayout>
