<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dip"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/dialogue_background"
    android:orientation="vertical" >
    
	<TextView 
	    android:layout_marginTop="10dip"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textSize="@dimen/dimen_global_16sp"
	    android:textColor="@color/color_app_base_4"
	    android:singleLine="true"
	    android:ellipsize="end"
	    android:text="服务费规则"/>
	
	<TextView 
	    android:layout_marginTop="8dip"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textSize="@dimen/dimen_global_14sp"
	    android:textColor="@color/color_app_base_4"
	    android:paddingLeft="20dip"
	    android:paddingRight="20dip"
	    android:layout_marginBottom="10dip"
	    android:text="1、不满30元，5元服务费。\n2、选择1小时速达，3元服务费。\n3、当天第二单开始免服务费。"/>
</LinearLayout>
