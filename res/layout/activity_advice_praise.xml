<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
	<ImageView 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:scaleType="centerCrop"
	    android:src="@drawable/main_invitation_ad"
	    android:background="@color/color_app_base_5"/>
	
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="80dip"
	    android:background="@color/color_app_base_5"
	    android:orientation="horizontal">
	    
	    <LinearLayout 
	        android:layout_width="0dip"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:gravity="center"
	        android:orientation="vertical">
	        
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="好友领取数量（人）"
	            android:textColor="@color/color_app_base_4"
	            android:textSize="@dimen/dimen_global_12sp"/>
	        
	        <TextView
	            android:id="@+id/total_amount" 
	            android:layout_marginTop="18dip"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="0"
	            android:textSize="@dimen/dimen_global_18sp"
	            android:textColor="@color/color_app_base_9"/>
	    </LinearLayout>
	    <View 
	        android:layout_width="1dip"
	        android:layout_height="64dip"
	        android:layout_gravity="center_vertical"
	        android:background="@color/color_app_base_7"/>
	    <LinearLayout 
	        android:layout_width="0dip"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:gravity="center"
	        android:orientation="vertical">
	        
	        <TextView 
	           
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="好友使用数量（人）"
	            android:textColor="@color/color_app_base_4"
	            android:textSize="@dimen/dimen_global_12sp"/>
	        
	        <TextView 
	            android:id="@+id/used_amount"
	            android:layout_marginTop="18dip"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="0"
	            android:textSize="@dimen/dimen_global_18sp"
	            android:textColor="@color/color_app_base_9"/>
	    </LinearLayout>
	    <View 
	        android:layout_width="1dip"
	        android:layout_height="64dip"
	        android:layout_gravity="center_vertical"
	        android:background="@color/color_app_base_7"/>
	    <LinearLayout 
	        android:layout_width="0dip"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:gravity="center"
	        android:orientation="vertical">
	        
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="累计获得收益（元）"
	            android:textColor="@color/color_app_base_4"
	            android:textSize="@dimen/dimen_global_12sp"/>
	        
	        <TextView 
	            android:id="@+id/total_money"
	            android:layout_marginTop="18dip"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="0"
	            android:textSize="@dimen/dimen_global_18sp"
	            android:textColor="@color/color_app_base_9"/>
	    </LinearLayout>
	</LinearLayout>
	
	<TextView 
	    android:layout_width="match_parent"
	    android:layout_height="74dip"
	    android:text="菜票已经准备好了，赶快分享吧~"
	    android:textSize="@dimen/dimen_global_16sp"
	    android:gravity="center"
	    android:textColor="@color/color_app_base_4"/>
	
	<Button 
	    android:id="@+id/advice_praise_button"
	    android:layout_width="match_parent"
	    android:layout_marginLeft="18dip"
	    android:layout_marginRight="18dip"
	    android:layout_height="44dip"
	    android:background="@drawable/nomal_button_nomal_bg"
	    android:text="立即分享"
	    android:textColor="@color/color_app_base_5"
	    android:textSize="@dimen/dimen_global_16sp"/>
	
	<TextView 
	    android:id="@+id/activity_rule_button"
	    android:layout_marginLeft="18dip"
	    android:layout_marginTop="18dip"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="活动规则"
	    android:textSize="@dimen/dimen_global_12sp"
	    android:textColor="@color/color_app_base_2"/>
</LinearLayout>
