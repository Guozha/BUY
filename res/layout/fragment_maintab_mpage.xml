<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <!-- 上面部分 -->
	<LinearLayout 
	    android:id="@+id/fragment_mpage_season"
	    android:layout_width="match_parent"
	    android:layout_height="0dip"
	    android:layout_weight="332"
	    android:layout_marginTop="12dip"
	    android:layout_marginLeft="12dip"
	    android:layout_marginRight="12dip"
	    android:layout_marginBottom="8dip"
	    android:background="@drawable/main_background"
	    android:orientation="horizontal"
	    android:padding="8dip">
	   	
	    <LinearLayout 
	        android:layout_width="0dip"
	        android:layout_height="match_parent"
	        android:orientation="vertical"
	        android:gravity="center"
	        android:layout_weight="420">
	        
	        <LinearLayout 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:gravity="center_horizontal"
	            android:orientation="horizontal">
	            
	            <TextView 
	                android:id="@+id/calendar_day"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textColor="@color/color_app_base_4"
	                android:textSize="@dimen/dimen_global_60sp"
	                android:text="08"/>
	            	
	            <LinearLayout 
	                android:layout_width="wrap_content"
	                android:layout_height="match_parent"
	                android:gravity="center_vertical"
	                android:layout_marginLeft="10dip"
	                android:orientation="vertical">
	                
	                <TextView 
	                    android:id="@+id/calendar_solar"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:text="3月 2015"
			            android:gravity="center"
			            android:textColor="@color/color_app_base_4"
			            android:textSize="@dimen/dimen_global_16sp"/>
	                
		            <TextView 
		                android:id="@+id/calendar_lunar"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:text="正月十一"
			            android:gravity="center"
			            android:textColor="@color/color_app_base_4"
			            android:textSize="@dimen/dimen_global_16sp"/>
	            </LinearLayout>
	        </LinearLayout>
	        
	        <TextView 
	            android:id="@+id/today_descript"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="@dimen/dimen_global_16sp"
	            android:textColor="@color/color_app_base_2"
	            android:maxLines="2"
	            android:maxWidth="160dp"
	            android:text="食清淡 饮菊花茶护肝"/>
	    </LinearLayout>
	    
	    <LinearLayout 
	        android:layout_width="0dip"
	        android:layout_height="match_parent"
	        android:orientation="vertical"
	        android:gravity="center"
	        android:layout_weight="252">
	        
	        <ImageView 
	            android:id="@+id/main_mpage_add_plan_icon"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@drawable/main_plan_add"/>
	        
	        <TextView 
	            android:id="@+id/main_mpage_add_plan_text"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="@dimen/dimen_global_14sp"
	            android:textColor="@color/color_app_base_3"
	            android:layout_marginTop="8dip"
	            android:text="来点菜吧"/>
	        
	    </LinearLayout>
	</LinearLayout>
	
	<!-- 中间部分 -->
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="0dip"
	    android:layout_weight="380"
	    android:layout_marginLeft="12dip"
	    android:layout_marginRight="12dip"
	    android:background="@drawable/main_background"
	    android:orientation="horizontal">
	    
	    <LinearLayout 
	        android:layout_width="0dip"
	        android:id="@+id/mpage_market_menu"
	        android:layout_height="match_parent"
	        android:orientation="vertical"
	        android:layout_weight="1">
	        
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="@dimen/dimen_global_16sp"
	            android:layout_marginLeft="18dip"
	            android:layout_marginTop="10dip"
	            android:paddingBottom="12dip"
	            android:textColor="@color/color_app_base_1"
	            android:text="逛菜场"/>
	        <Space 
	            android:layout_height="0dip"
	            android:layout_weight="1"
	            android:layout_width="match_parent"/>
	        <ImageView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:scaleType="centerInside"
	            android:src="@drawable/main_market_img"/>
	    </LinearLayout>
	    
	    <!-- 菜品推进分类 -->
	    <LinearLayout 
	        android:layout_width="0dip"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:gravity="center"
	        android:orientation="vertical">
	        
	        <LinearLayout 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:gravity="center">
	            
	            <TextView 
	                android:id="@+id/mpage_quick_menu_1"
	                android:layout_width="55dip"
	                android:layout_height="30dip"
	                android:textSize="@dimen/dimen_global_14sp"
	                android:textColor="@color/color_app_base_2"
	                android:gravity="center"
	                android:background="@drawable/main_tag_backgroung"
	                android:text="水果"/>
	            
	            <TextView 
	                android:id="@+id/mpage_quick_menu_2"
	                android:layout_width="55dip"
	                android:layout_height="30dip"
	                android:layout_marginLeft="16dip"
	                android:textSize="@dimen/dimen_global_14sp"
	                android:textColor="@color/color_app_base_2"
	                android:gravity="center"
	                android:background="@drawable/main_tag_backgroung"
	                android:text="水果"/>
        	</LinearLayout>
        	
	        <LinearLayout 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="20dip"
	            android:gravity="center">
	            
	            <TextView 
	                android:id="@+id/mpage_quick_menu_3"
	                android:layout_width="55dip"
	                android:layout_height="30dip"
	                android:textSize="@dimen/dimen_global_14sp"
	                android:textColor="@color/color_app_base_2"
	                android:gravity="center"
	                android:background="@drawable/main_tag_backgroung"
	                android:text="水果"/>
	            
	            <TextView 
	                android:id="@+id/mpage_quick_menu_4"
	                android:layout_width="55dip"
	                android:layout_height="30dip"
	                android:layout_marginLeft="16dip"
	                android:textSize="@dimen/dimen_global_14sp"
	                android:textColor="@color/color_app_base_2"
	                android:gravity="center"
	                android:background="@drawable/main_tag_backgroung"
	                android:text="水果"/>
        	</LinearLayout>
        	
	        <LinearLayout 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="20dip"
	            android:gravity="center">
	            
	            <TextView 
	                android:id="@+id/mpage_quick_menu_5"
	                android:layout_width="55dip"
	                android:layout_height="30dip"
	                android:textSize="@dimen/dimen_global_14sp"
	                android:textColor="@color/color_app_base_2"
	                android:gravity="center"
	                android:background="@drawable/main_tag_backgroung"
	                android:text="水果"/>
	            
	             <TextView 
	                android:id="@+id/mpage_choose_menu_custom"
	                android:layout_width="55dip"
	                android:layout_height="30dip"
	                android:layout_marginLeft="16dip"
	                android:textSize="@dimen/dimen_global_14sp"
	                android:textColor="@color/color_app_base_2"
	                android:gravity="center"
	                android:background="@drawable/main_tag_edit"/>
        	</LinearLayout>
	    </LinearLayout>
	</LinearLayout>

	<!-- 下面部分 -->
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="0dip"
	    android:layout_weight="326"
	    android:layout_marginLeft="12dip"
	    android:layout_marginRight="12dip"
	    android:layout_marginBottom="12dip"
	    android:layout_marginTop="8dip"
	    android:orientation="horizontal">
	    
	    <LinearLayout 
	        android:id="@+id/mpage_pre_special_menu"
	        android:layout_width="0dip"
	        android:layout_height="match_parent"
	        android:orientation="vertical"
	        android:background="@drawable/main_background"
	        android:layout_weight="280">
	        
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="@dimen/dimen_global_16sp"
	            android:textColor="@color/color_app_base_1"
	            android:layout_marginLeft="18dip"
	            android:layout_marginTop="10dip"
	            android:text="特供"/>
	        
	        <ImageView 
	            android:layout_width="match_parent"
	            android:layout_height="0dip"
	            android:layout_weight="1"
	            android:scaleType="centerInside"
	            android:paddingBottom="10dip"
	            android:paddingTop="10dip"
	            android:src="@drawable/main_season_icon"/>
	    </LinearLayout>
	        
        <RelativeLayout 
            android:id="@+id/mpage_season_menu"
            android:src="@drawable/main_season_img_spring"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="378"
            android:layout_marginLeft="8dip">
            <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="18dip"
	            android:layout_marginTop="10dip"
	            android:textSize="@dimen/dimen_global_16sp"
	            android:textColor="@color/color_app_base_1"
	            android:text="时令养生"/>
        </RelativeLayout>
	       
	</LinearLayout>
</LinearLayout>
