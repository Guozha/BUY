<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="0dip"
	    android:layout_weight="1"
	    android:orientation="horizontal"
	    android:padding="8dip">
	    <ImageView 
	        android:layout_width="0dip"
	        android:layout_height="match_parent"
	        android:layout_weight="3"
	        android:scaleType="fitXY"
	        android:src="@drawable/main_page_calendar_image"/>
	    <ImageView 
	        android:layout_width="0dip"
	        android:layout_marginLeft="8dip"
	        android:layout_height="match_parent"
	        android:layout_weight="5"
	        android:scaleType="fitXY"
	        android:src="@drawable/main_page_foodmenu_image"/>
	</LinearLayout>
	
	<com.guozha.buy.view.AutoViewFlipper
        android:id="@+id/main_page_auto_flipper_view"
        android:layout_width="match_parent"
        android:layout_height="180dip" >
	</com.guozha.buy.view.AutoViewFlipper>

	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="0dip"
	    android:layout_weight="1"
	    android:orientation="horizontal">
	    <ImageView 
	        android:padding="8dip"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:scaleType="fitXY"
	        android:src="@drawable/main_page_seasonadvice_image"/>
	</LinearLayout>
</LinearLayout>
